<%- include('../header') %>

<style>
    .schedule-card {
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .schedule-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }
    .schedule-type-meeting { border-left: 4px solid #007bff; }
    .schedule-type-training { border-left: 4px solid #28a745; }
    .schedule-type-maintenance { border-left: 4px solid #ffc107; }
    .schedule-type-inspection { border-left: 4px solid #dc3545; }
    .schedule-type-routine { border-left: 4px solid #6c757d; }
    
    .time-slot {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 0.5rem;
      border-radius: 0.375rem;
      text-align: center;
      font-weight: 500;
    }
    

    
    .event-dot {
      width: 8px;
      height: 8px;
      background: #ff5722;
      border-radius: 50%;
      display: inline-block;
      margin-right: 0.25rem;
    }
    
    .timeline-item {
      position: relative;
      padding-left: 1.5rem;
      margin-bottom: 1rem;
    }
    
    .timeline-item::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0.5rem;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background: #007bff;
      border: 2px solid #fff;
      box-shadow: 0 0 0 2px #007bff;
    }
    
    .timeline-item::after {
      content: '';
      position: absolute;
      left: 5px;
      top: 1.2rem;
      bottom: -1rem;
      width: 2px;
      background: #dee2e6;
    }
    
    .timeline-item:last-child::after {
      display: none;
    }
  </style>

<div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
          <h2 class="mb-3 mb-md-0">
            <i class="fas fa-calendar-alt text-success me-2"></i><%= title %>
          </h2>
          <div class="d-flex gap-2">
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newScheduleModal">
              <i class="fas fa-plus me-1"></i>새 일정
            </button>
            <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
              <i class="fas fa-filter me-1"></i>필터
            </button>
          </div>
        </div>
        
        <!-- 필터 섹션 -->
        <div class="collapse mb-4" id="filterCollapse">
          <div class="card">
            <div class="card-body">
              <form method="GET" class="row g-3">
                <div class="col-md-3">
                  <label class="form-label">부서</label>
                  <select name="department" class="form-select">
                    <option value="">전체</option>
                    <option value="보안1팀" <%= filters.department === '보안1팀' ? 'selected' : '' %>>보안1팀</option>
                    <option value="보안2팀" <%= filters.department === '보안2팀' ? 'selected' : '' %>>보안2팀</option>
                    <option value="보안3팀" <%= filters.department === '보안3팀' ? 'selected' : '' %>>보안3팀</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <label class="form-label">일정 유형</label>
                  <select name="type" class="form-select">
                    <option value="">전체</option>
                    <option value="meeting" <%= filters.type === 'meeting' ? 'selected' : '' %>>회의</option>
                    <option value="training" <%= filters.type === 'training' ? 'selected' : '' %>>교육</option>
                    <option value="maintenance" <%= filters.type === 'maintenance' ? 'selected' : '' %>>점검</option>
                    <option value="inspection" <%= filters.type === 'inspection' ? 'selected' : '' %>>검사</option>
                    <option value="routine" <%= filters.type === 'routine' ? 'selected' : '' %>>일상업무</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <label class="form-label">상태</label>
                  <select name="status" class="form-select">
                    <option value="">전체</option>
                    <option value="scheduled" <%= filters.status === 'scheduled' ? 'selected' : '' %>>예정</option>
                    <option value="in-progress" <%= filters.status === 'in-progress' ? 'selected' : '' %>>진행중</option>
                    <option value="completed" <%= filters.status === 'completed' ? 'selected' : '' %>>완료</option>
                  </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                  <button type="submit" class="btn btn-primary me-2">적용</button>
                  <a href="/security/schedule" class="btn btn-outline-secondary">초기화</a>
                </div>
              </form>
            </div>
          </div>
        </div>
        
        <% if (session.message) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= session.message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
          <% delete session.message; %>
        <% } %>

        <% if (session.error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= session.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
          <% delete session.error; %>
        <% } %>

        <!-- 일정 목록 -->
        <div class="row mb-4">
          <div class="col-12">
            <h5 class="mb-3">
              <i class="fas fa-clock text-primary me-2"></i>오늘의 일정
            </h5>
            <div class="row">
              <% if (todaySchedules && todaySchedules.length > 0) { %>
                <% todaySchedules.forEach(schedule => { %>
                  <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <div class="card schedule-card schedule-type-<%= schedule.type %>">
                      <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                          <span class="badge bg-<%= schedule.type === 'meeting' ? 'primary' : schedule.type === 'training' ? 'success' : schedule.type === 'maintenance' ? 'warning' : schedule.type === 'inspection' ? 'danger' : 'secondary' %>">
                            <%= schedule.type === 'meeting' ? '회의' : schedule.type === 'training' ? '교육' : schedule.type === 'maintenance' ? '점검' : schedule.type === 'inspection' ? '검사' : '일상업무' %>
                          </span>
                          <small class="text-muted"><%= schedule.startTime %> - <%= schedule.endTime || '미정' %></small>
                        </div>
                        <h6 class="card-title">
                          <a href="/security/schedule/<%= schedule._id %>" class="text-decoration-none">
                            <%= schedule.title %>
                          </a>
                        </h6>
                        <p class="card-text small"><%= schedule.content.length > 100 ? schedule.content.substring(0, 100) + '...' : schedule.content %></p>
                        <div class="d-flex justify-content-between align-items-center">
                          <small class="text-muted">장소: <%= schedule.location || '미정' %></small>
                          <small class="text-muted">담당: <%= schedule.department %></small>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="col-12">
                  <div class="text-center text-muted">
                    <i class="fas fa-calendar-times fa-2x mb-2"></i>
                    <p class="mb-0">오늘 예정된 일정이 없습니다.</p>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>



        <!-- 전체 일정 목록 -->
        <div class="row mb-4">
          <div class="col-12">
            <h5 class="mb-3">
              <i class="fas fa-list text-secondary me-2"></i>전체 일정
            </h5>
            <div class="row">
              <% if (schedules && schedules.length > 0) { %>
                <% schedules.forEach(schedule => { %>
                  <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <div class="card schedule-card schedule-type-<%= schedule.type %>">
                      <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                          <span class="badge bg-<%= schedule.type === 'meeting' ? 'primary' : schedule.type === 'training' ? 'success' : schedule.type === 'maintenance' ? 'warning' : schedule.type === 'inspection' ? 'danger' : 'secondary' %>">
                            <%= schedule.type === 'meeting' ? '회의' : schedule.type === 'training' ? '교육' : schedule.type === 'maintenance' ? '점검' : schedule.type === 'inspection' ? '검사' : '일상업무' %>
                          </span>
                          <small class="text-muted"><%= new Date(schedule.startDate).toLocaleDateString('ko-KR') %></small>
                        </div>
                        <h6 class="card-title">
                          <a href="/security/schedule/<%= schedule._id %>" class="text-decoration-none">
                            <%= schedule.title %>
                          </a>
                        </h6>
                        <p class="card-text small"><%= schedule.content.length > 100 ? schedule.content.substring(0, 100) + '...' : schedule.content %></p>
                        <div class="d-flex justify-content-between align-items-center">
                          <span class="badge bg-<%= schedule.status === 'scheduled' ? 'info' : schedule.status === 'in-progress' ? 'warning' : 'success' %>">
                            <%= schedule.status === 'scheduled' ? '예정' : schedule.status === 'in-progress' ? '진행중' : '완료' %>
                          </span>
                          <small class="text-muted">담당: <%= schedule.department %></small>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="col-12">
                  <div class="text-center text-muted mt-5">
                    <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                    <h5>등록된 일정이 없습니다</h5>
                    <p>새로운 일정을 등록해보세요.</p>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- 페이지네이션 -->
        <% if (pagination.total > 1) { %>
          <nav aria-label="일정 페이지네이션" class="mt-4">
            <ul class="pagination justify-content-center">
              <% if (pagination.hasPrev) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= pagination.current - 1 %>&department=<%= filters.department || '' %>&type=<%= filters.type || '' %>&status=<%= filters.status || '' %>">
                    이전
                  </a>
                </li>
              <% } %>
              
              <% for (let i = 1; i <= pagination.total; i++) { %>
                <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>&department=<%= filters.department || '' %>&type=<%= filters.type || '' %>&status=<%= filters.status || '' %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>
              
              <% if (pagination.hasNext) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= pagination.current + 1 %>&department=<%= filters.department || '' %>&type=<%= filters.type || '' %>&status=<%= filters.status || '' %>">
                    다음
                  </a>
                </li>
              <% } %>
            </ul>
          </nav>
        <% } %>
      </div>
    </div>
  </div>

  <!-- 새 일정 모달 -->
  <div class="modal fade" id="newScheduleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">새 일정</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form method="POST" action="/security/schedule" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="row mb-3">
              <div class="col-md-8">
                <label class="form-label">일정 제목 <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="title" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">일정 유형 <span class="text-danger">*</span></label>
                <select class="form-select" name="type" required>
                  <option value="">선택</option>
                  <option value="meeting">회의</option>
                  <option value="training">교육</option>
                  <option value="maintenance">점검</option>
                  <option value="inspection">검사</option>
                  <option value="routine">일상업무</option>
                </select>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label class="form-label">시작 날짜 <span class="text-danger">*</span></label>
                <input type="date" class="form-control" name="startDate" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">시작 시간 <span class="text-danger">*</span></label>
                <input type="time" class="form-control" name="startTime" required>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label class="form-label">종료 날짜</label>
                <input type="date" class="form-control" name="endDate">
              </div>
              <div class="col-md-6">
                <label class="form-label">종료 시간</label>
                <input type="time" class="form-control" name="endTime">
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label class="form-label">담당 부서 <span class="text-danger">*</span></label>
                <select class="form-select" name="department" required>
                  <option value="">선택</option>
                  <option value="보안1팀">보안1팀</option>
                  <option value="보안2팀">보안2팀</option>
                  <option value="보안3팀">보안3팀</option>
                  <option value="전체">전체</option>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">장소</label>
                <input type="text" class="form-control" name="location" placeholder="회의실, 교육실 등">
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label class="form-label">참석자</label>
                <select class="form-select" name="attendees" multiple>
                  <option value="">참석자 선택 (Ctrl+클릭으로 다중 선택)</option>
                  <!-- TODO: 부서별 직원 목록을 AJAX로 로드하여 표시 -->
                </select>
                <small class="text-muted">참석자는 나중에 추가할 수 있습니다.</small>
              </div>
              <div class="col-md-6">
                <label class="form-label">첨부파일</label>
                <input type="file" class="form-control" name="attachments" multiple accept=".pdf,.doc,.docx,.xls,.xlsx,.txt,.jpg,.jpeg,.png,.gif">
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">일정 내용 <span class="text-danger">*</span></label>
              <textarea class="form-control" name="content" rows="4" required placeholder="일정에 대한 상세 내용을 입력하세요"></textarea>
            </div>
            <div class="mb-3">
              <small class="text-muted">첨부파일: 최대 5개 파일, 각 파일 5MB 이하 (PDF, Word, Excel, 텍스트, 이미지)</small>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
            <button type="submit" class="btn btn-primary">등록</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    // 오늘 날짜를 기본값으로 설정
    document.addEventListener('DOMContentLoaded', function() {
      const today = new Date().toISOString().split('T')[0];
      const startDateInput = document.querySelector('input[name="startDate"]');
      const endDateInput = document.querySelector('input[name="endDate"]');
      
      if (startDateInput) startDateInput.value = today;
      if (endDateInput) endDateInput.value = today;
      
      // 폼 유효성 검증 설정
      setupFormValidation();
      
      // 부서 변경 시 참석자 목록 업데이트
      setupDepartmentChangeHandler();
    });
    
    // 폼 유효성 검증 설정
    function setupFormValidation() {
      const form = document.querySelector('form[action="/security/schedule"]');
      if (!form) return;
      
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // 필수 필드 검증
        const requiredFields = [
          { name: 'title', label: '일정 제목' },
          { name: 'type', label: '일정 유형' },
          { name: 'department', label: '담당 부서' },
          { name: 'startDate', label: '시작 날짜' },
          { name: 'startTime', label: '시작 시간' },
          { name: 'content', label: '일정 내용' }
        ];
        
        let isValid = true;
        let errorMessages = [];
        
        requiredFields.forEach(field => {
          const element = form.querySelector(`[name="${field.name}"]`);
          if (!element || !element.value.trim()) {
            isValid = false;
            errorMessages.push(`${field.label}을(를) 입력해주세요.`);
            if (element) {
              element.classList.add('is-invalid');
            }
          } else {
            if (element) {
              element.classList.remove('is-invalid');
            }
          }
        });
        
        // 날짜 유효성 검증
        const startDate = form.querySelector('[name="startDate"]').value;
        const endDate = form.querySelector('[name="endDate"]').value;
        
        if (endDate && endDate < startDate) {
          isValid = false;
          errorMessages.push('종료 날짜는 시작 날짜보다 이후여야 합니다.');
          form.querySelector('[name="endDate"]').classList.add('is-invalid');
        }
        
        // 시간 유효성 검증
        const timeRegex = /^([01]?[0-9]|2[0-3]):[0-5][0-9]$/;
        const startTime = form.querySelector('[name="startTime"]').value;
        const endTime = form.querySelector('[name="endTime"]').value;
        
        if (startTime && !timeRegex.test(startTime)) {
          isValid = false;
          errorMessages.push('올바른 시작 시간을 입력해주세요. (HH:MM 형식)');
          form.querySelector('[name="startTime"]').classList.add('is-invalid');
        }
        
        if (endTime && !timeRegex.test(endTime)) {
          isValid = false;
          errorMessages.push('올바른 종료 시간을 입력해주세요. (HH:MM 형식)');
          form.querySelector('[name="endTime"]').classList.add('is-invalid');
        }
        
        if (!isValid) {
          showErrorToast('입력 오류: ' + errorMessages.join(', '));
          return;
        }
        
        // 유효성 검증 통과 시 폼 제출
        form.submit();
      });
    }
    
    // 부서 변경 시 참석자 목록 업데이트
    function setupDepartmentChangeHandler() {
      const departmentSelect = document.querySelector('[name="department"]');
      const attendeesSelect = document.querySelector('[name="attendees"]');
      
      if (departmentSelect && attendeesSelect) {
        departmentSelect.addEventListener('change', function() {
          const department = this.value;
          if (department) {
            loadEmployeesByDepartment(department, attendeesSelect);
          } else {
            // 부서가 선택되지 않았을 때 참석자 목록 초기화
            attendeesSelect.innerHTML = '<option value="">참석자 선택 (Ctrl+클릭으로 다중 선택)</option>';
          }
        });
      }
    }
    
    // 부서별 직원 목록 로드
    function loadEmployeesByDepartment(department, attendeesSelect) {
      fetch(`/security/api/employees/${encodeURIComponent(department)}`)
        .then(response => response.json())
        .then(employees => {
          attendeesSelect.innerHTML = '<option value="">참석자 선택 (Ctrl+클릭으로 다중 선택)</option>';
          
          employees.forEach(employee => {
            const option = document.createElement('option');
            option.value = employee._id;
            option.textContent = `${employee.name} (${employee.position})`;
            attendeesSelect.appendChild(option);
          });
        })
        .catch(error => {
          console.error('직원 목록 로드 오류:', error);
          attendeesSelect.innerHTML = '<option value="">참석자 선택 (Ctrl+클릭으로 다중 선택)</option>';
        });
    }
    
    // 에러 토스트 표시 함수
    function showErrorToast(message) {
      // 기존 토스트 컨테이너 찾기 또는 생성
      let toastContainer = document.getElementById('toast-container');
      if (!toastContainer) {
        toastContainer = document.createElement('div');
        toastContainer.id = 'toast-container';
        toastContainer.className = 'toast-container position-fixed top-0 end-0 p-3';
        toastContainer.style.zIndex = '9999';
        document.body.appendChild(toastContainer);
      }
      
      const toast = document.createElement('div');
      toast.className = 'toast show bg-danger text-white';
      toast.innerHTML = `
        <div class="toast-body">
          <i class="fa-solid fa-exclamation-triangle me-2"></i>
          ${message}
        </div>
      `;
      
      toastContainer.appendChild(toast);
      
      // 5초 후 자동으로 숨기기
      setTimeout(() => {
        if (toast.parentNode) {
          toast.parentNode.removeChild(toast);
        }
      }, 5000);
    }
  </script>

<%- include('../footer') %>
