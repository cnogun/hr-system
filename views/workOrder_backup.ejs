                                    '근무지원조': [],
                                    '기타': []
                                };
                                
                                // 사고내용을 2개씩 묶어서 처리 (type, employeeName)
                                for (let i = 0; i < details.length; i += 2) {
                                    const type = details[i] || '';
                                    const employeeName = details[i + 1] || '';
                                    
                                    if (employeeName && employeeName.trim()) {
                                        const displayType = type || '기타';
                                        
