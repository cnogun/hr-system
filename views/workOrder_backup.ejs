                                            <div class="absent-grid-item">
                                                <div class="absent-type"><%= item.type %>:</div>
                                                <div class="absent-names"><%= item.names.join(', ') %></div>
                                    </div>
                                        <% }); %>
                                    <% } else if (workOrder.personnelStatus.accidentDetails) { %>
                                        <div class="absent-grid-item">
                                            <div class="absent-type">사고내용:</div>
                                            <div class="absent-names"><%= workOrder.personnelStatus.accidentDetails %></div>
                                        </div>
                                <% } else { %>
                                    <!-- 사고내용이 없으면 공란으로 표시 -->
                            <% } %>
                        </div>
                            </td>
