      forceInitializeDropdowns();
    }
  }, 1000);
  
  // 추가 안전장치: 3초 후 한 번 더 강제 초기화
  setTimeout(function() {
    if (typeof bootstrap !== 'undefined') {
      console.log('3초 후 추가 드롭다운 초기화 시작');
      forceInitializeDropdowns();
    }
  }, 3000);
});

