<!--
  파일명: header.ejs
  목적: 애플리케이션 공통 헤더 컴포넌트
  기능:
  - 네비게이션 메뉴 표시
  - 사용자 로그인 상태 표시
  - 권한별 메뉴 표시/숨김
  - 로그아웃 기능
  - 반응형 디자인 적용
-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<header class="sticky-top shadow-sm bg-white">
  <div class="container-fluid py-2 d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <i class="fa-solid fa-users-gear fa-2x text-primary"></i>
      <h2 class="mb-0 fw-bold text-primary">인사관리 시스템</h2>
      <% if (session && session.userId) { %>
      <nav class="nav nav-pills ms-4">
        <a class="nav-link d-flex align-items-center" href="/dashboard"><i class="fa-solid fa-chart-line me-1"></i> 대시보드</a>
        <a class="nav-link d-flex align-items-center" href="/employees"><i class="fa-solid fa-search me-1"></i> 직원 찾기</a>
        <a class="nav-link d-flex align-items-center" href="/boards"><i class="fa-solid fa-comments me-1"></i> 게시판</a>
        <% if (session && session.userRole === 'admin') { %>
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="adminDropdown" role="button">
            <i class="fa-solid fa-cog me-1"></i> 관리자
          </a>
          <ul class="dropdown-menu" id="adminDropdownMenu" style="display: none;">
            <li><a class="dropdown-item" href="/boards/admin/dashboard"><i class="fa-solid fa-chart-bar me-2"></i> 통계 대시보드</a></li>
            <li><a class="dropdown-item" href="/boards/admin/reports"><i class="fa-solid fa-flag me-2"></i> 신고 관리</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/employees/excel"><i class="fa-solid fa-file-arrow-down me-2"></i> 직원 목록 다운로드</a></li>
            <li><a class="dropdown-item" href="/uniform/excel-qty"><i class="fa-solid fa-file-arrow-down me-2"></i> 유니폼 통계</a></li>
            <li><a class="dropdown-item" href="/auth/logs/excel"><i class="fa-solid fa-file-arrow-down me-2"></i> 활동 로그</a></li>
          </ul>
        </div>
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="employeeInputDropdown" role="button">
            <i class="fa-solid fa-user-plus me-1"></i> 직원 정보 입력
          </a>
          <ul class="dropdown-menu" id="employeeInputDropdownMenu" style="display: none;">
            <li><a class="dropdown-item" href="/employees/new">신입 직원</a></li>
            <li><a class="dropdown-item" href="/employees/existing">기존 직원</a></li>
          </ul>
        </div>
        <% } %>
        <% if (typeof session !== 'undefined' && session.userRole === 'admin') { %>
          <a href="/notice/new" class="btn btn-warning ms-2">시스템 알림</a>
        <% } %>
      </nav>
      <% } %>
    </div>
    <div class="text-end">
      <% if (session && session.userId) { %>
        <div class="d-flex align-items-center gap-3">
          <div class="text-end">
            <div class="fw-semibold text-primary" style="font-size: 0.85rem;"><%= position %></div>
            <div class="fw-semibold text-dark" style="font-size: 0.85rem;"><%= name %></div>
          </div>
          <div class="vr mx-2" style="height: 35px; opacity: 0.3;"></div>
          <a href="/auth/logout" class="btn btn-outline-danger btn-sm px-3 py-1" style="font-size: 0.8rem;">
            <i class="fa-solid fa-right-from-bracket me-1"></i> 로그아웃
          </a>
        </div>
      <% } %>
    </div>
  </div>
</header>
<style>
body { background: #f8fafc; }

/* 드롭다운 스타일 개선 */
.dropdown-menu {
  border: 1px solid rgba(0,0,0,.15);
  box-shadow: 0 0.5rem 1rem rgba(0,0,0,.175);
  position: absolute;
  z-index: 1000;
  background-color: white;
  min-width: 200px;
}

.dropdown-item:hover {
  background-color: #f8f9fa;
}

.nav-link.dropdown-toggle::after {
  margin-left: 0.5em;
}

/* 커스텀 드롭다운 스타일 */
.custom-dropdown {
  position: relative;
}

.custom-dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  z-index: 1000;
  display: none;
  min-width: 200px;
  padding: 0.5rem 0;
  margin: 0.125rem 0 0;
  font-size: 0.875rem;
  color: #212529;
  text-align: left;
  list-style: none;
  background-color: #fff;
  background-clip: padding-box;
  border: 1px solid rgba(0,0,0,.15);
  border-radius: 0.375rem;
  box-shadow: 0 0.5rem 1rem rgba(0,0,0,.175);
}

.custom-dropdown-menu.show {
  display: block;
}
</style> 
<script>
window.addEventListener('unload', function() {
  navigator.sendBeacon('/auth/logout');
});

// 커스텀 드롭다운 구현
document.addEventListener('DOMContentLoaded', function() {
  console.log('DOM 로드 완료 - 커스텀 드롭다운 초기화 시작');
  
  // 관리자 드롭다운
  const adminDropdown = document.getElementById('adminDropdown');
  const adminDropdownMenu = document.getElementById('adminDropdownMenu');
  
  if (adminDropdown && adminDropdownMenu) {
    console.log('관리자 드롭다운 요소 발견');
    
    adminDropdown.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      console.log('관리자 드롭다운 클릭됨');
      
      // 다른 드롭다운들 닫기
      if (employeeInputDropdownMenu) {
        employeeInputDropdownMenu.style.display = 'none';
      }
      
      // 현재 드롭다운 토글
      if (adminDropdownMenu.style.display === 'none' || adminDropdownMenu.style.display === '') {
        adminDropdownMenu.style.display = 'block';
        console.log('관리자 드롭다운 열림');
      } else {
        adminDropdownMenu.style.display = 'none';
        console.log('관리자 드롭다운 닫힘');
      }
    });
  }
  
  // 직원정보입력 드롭다운
  const employeeInputDropdown = document.getElementById('employeeInputDropdown');
  const employeeInputDropdownMenu = document.getElementById('employeeInputDropdownMenu');
  
  if (employeeInputDropdown && employeeInputDropdownMenu) {
    console.log('직원정보입력 드롭다운 요소 발견');
    
    employeeInputDropdown.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      console.log('직원정보입력 드롭다운 클릭됨');
      
      // 다른 드롭다운들 닫기
      if (adminDropdownMenu) {
        adminDropdownMenu.style.display = 'none';
      }
      
      // 현재 드롭다운 토글
      if (employeeInputDropdownMenu.style.display === 'none' || employeeInputDropdownMenu.style.display === '') {
        employeeInputDropdownMenu.style.display = 'block';
        console.log('직원정보입력 드롭다운 열림');
      } else {
        employeeInputDropdownMenu.style.display = 'none';
        console.log('직원정보입력 드롭다운 닫힘');
      }
    });
  }
  
  // 페이지 클릭시 드롭다운 닫기
  document.addEventListener('click', function(e) {
    if (adminDropdownMenu && !adminDropdown.contains(e.target)) {
      adminDropdownMenu.style.display = 'none';
    }
    if (employeeInputDropdownMenu && !employeeInputDropdown.contains(e.target)) {
      employeeInputDropdownMenu.style.display = 'none';
    }
  });
  
  console.log('커스텀 드롭다운 초기화 완료');
});
</script> 