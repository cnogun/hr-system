<!--
  파일명: boards/index.ejs
  목적: 게시판 목록 페이지
  기능:
  - 사용 가능한 게시판 목록 표시
  - 게시판별 권한 정보 표시
  - 게시판별 게시글 수 표시
  - 권한별 게시판 필터링
  - 반응형 카드 디자인
-->
<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>게시판</title>
  <style>
    .board-card {
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .board-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }
    .board-icon {
      font-size: 1.5rem;
    }

    .board-stats {
      font-size: 0.8rem;
      color: #6c757d;
    }
    @media (max-width: 768px) {
      .board-card {
        margin-bottom: 1rem;
      }

    }
  </style>
</head>
<body>
  <%- include('../header') %>
  
  <div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
          <h2 class="mb-3 mb-md-0">
            <i class="fas fa-comments text-primary me-2"></i>게시판
          </h2>
        </div>
        
        <% if (session.message) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= session.message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
          <% delete session.message; %>
        <% } %>

        <div class="row">
          <!-- 모든 게시판 표시 -->
          <% boards.forEach((board, index) => { %>
            <div class="col-12 col-sm-6 col-lg-4 mb-4">
              <div class="card h-100 shadow-sm board-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                  <h5 class="card-title mb-0">
                    <% if (board.type === 'notice') { %>
                      <i class="fas fa-bullhorn text-danger board-icon"></i>
                    <% } else if (board.type === 'free') { %>
                      <i class="fas fa-comments text-primary board-icon"></i>
                    <% } else { %>
                      <i class="fas fa-users text-success board-icon"></i>
                    <% } %>
                    <span class="ms-2"><%= board.name %></span>
                  </h5>
                  <% if (board.department) { %>
                    <span class="badge bg-secondary"><%= board.department %></span>
                  <% } %>
                </div>
                <div class="card-body d-flex flex-column">
                  <p class="card-text text-muted flex-grow-1"><%= board.description %></p>
                  <div class="mt-auto">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <small class="text-muted board-stats">
                        타입: <%= board.type %> | 
                        <% if (board.writePermission === 'admin') { %>
                          <i class="fas fa-lock"></i> 관리자만 글쓰기
                        <% } else if (board.writePermission === 'department') { %>
                          <i class="fas fa-users"></i> 부서원만 글쓰기
                        <% } else { %>
                          <i class="fas fa-globe"></i> 모든 직원 글쓰기
                        <% } %>
                      </small>
                    </div>
                    <a href="/boards/<%= board._id %>" class="btn btn-primary w-100">
                      <i class="fas fa-arrow-right me-1"></i> 입장
                    </a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <% if (boards.length === 0) { %>
          <div class="text-center py-5">
            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">등록된 게시판이 없습니다.</h5>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('../footer') %>
</body>
</html> 