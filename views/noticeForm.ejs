<!--
  파일명: noticeForm.ejs
  목적: 시스템 알림 작성/수정 폼
  기능:
  - 시스템 알림 제목 입력
  - 시스템 알림 내용 입력 (9줄 텍스트 영역)
  - 저장 및 목록 버튼
  - 기존 데이터 수정 시 자동 로드
  - 반응형 디자인 적용
-->
<%- include('header') %>
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-body">
                     <h3 class="fw-bold mb-4 text-center"><%= notice ? '시스템 알림 수정' : '시스템 알림 작성' %></h3>
          <form action="<%= notice ? '/notice/' + notice._id + '/edit' : '/notice/new' %>" method="POST">
            <div class="mb-3">
              <label class="form-label">제목</label>
              <input type="text" name="title" class="form-control" value="<%= notice ? notice.title : '' %>" required>
            </div>
            <div class="mb-3">
              <label class="form-label">내용</label>
              <textarea name="content" class="form-control" rows="9" required><%= notice ? notice.content : '' %></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-success px-5">저장</button>
              <a href="/notice/manage" class="btn btn-secondary ms-2">목록</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('footer') %> 