            <h1 class="mb-0">근무명령서</h1>
            <div class="btn-group">
                <a href="/work-orders" class="btn btn-secondary">목록</a>
                <a href="/work-orders/<%= workOrder._id %>/edit" class="btn btn-warning">수정</a>
                <button type="button" class="btn btn-info" onclick="window.print()">인쇄</button>
            </div>
        </div>
        
        <!-- 인쇄 전용 제목과 결재란 -->
        <div class="print-title-approval" style="display: none;">
            <div style="text-align: center; margin-bottom: 10px;">
                <h1>근무명령서</h1>
            </div>
            <div style="margin-top: 10px; margin-bottom: 5px; display: flex; justify-content: flex-end;">
                <table class="approval-table">
                    <tr>
                        <th rowspan="2" class="approval-label">결<br>재</th>
                        <th>반장</th>
                        <th>과장</th>
                        <th>소장</th>
                    </tr>
                    <tr>
                        <td class="approval-cell"></td>
                        <td class="approval-cell"></td>
                        <td class="approval-cell"></td>
                    </tr>
                </table>
            </div>
        </div>
        
        
        <!-- 우측 상단 버튼들 -->

        <form action="/work-orders" method="POST">

            <!-- 근무 정보 -->
            <div class="form-section">
                <div class="section-header">□ 근무 정보</div>
            <div class="section-content">
                    <div class="form-group" style="width: 100%;">
                        <div class="form-control" style="background-color: #f8f9fa; border: 1px solid #ddd; padding: 0.2625rem; text-align: left; font-size: 14px; font-weight: 500;">
                            <% 
                            const workInfo = workOrder.workInfo;
                            if (workInfo && workInfo.date) {
                                // 날짜 포맷팅 (YYYY-MM-DD를 YYYY년 M월 D일(요일)로 변환)
                                const date = new Date(workInfo.date);
                                const year = date.getFullYear();
                                const month = date.getMonth() + 1;
                                const day = date.getDate();
                                const weekdays = ['일요일', '월요일', '화요일', '수요일', '목요일', '금요일', '토요일'];
                                const weekday = weekdays[date.getDay()];
                                const dayOfWeek = date.getDay(); // 0=일요일, 1=월요일, ..., 6=토요일
                                
                                // 기본 날짜 문자열
                                let displayText = `${year}년 ${month}월 ${day}일(${weekday})`;
                                
                                // 근무반과 근무시간 추가 (요청 형식: 날짜 - 근무반 근무조(시간))
                                if (workInfo.team) {
                                    displayText += ` - ${workInfo.team}`;
                                    
                                    // 근무시간 추가
                                    if (workInfo.workTime) {
                                        if (workInfo.workTime.display) {
                                            // display 형식이 "초야조(14:00~22:00)" 형태인 경우
                                            displayText += ` ${workInfo.workTime.display}`;
                                        } else if (workInfo.workTime.start && workInfo.workTime.end) {
                                            // display가 없으면 start/end로 조합
                                            let shiftName = workInfo.workTime.shift;
                                            if (!shiftName) {
                                                const startTime = workInfo.workTime.start;
                                                if (startTime === '06:00') { shiftName = '주간조'; } 
                                                else if (startTime === '14:00') { shiftName = '초야조'; } 
                                                else if (startTime === '22:00') { shiftName = '심야조'; } 
                                                else { shiftName = '근무조'; }
                                            }
                                            displayText += ` ${shiftName}(${workInfo.workTime.start}~${workInfo.workTime.end})`;
                                        }
                                    }
                                }
                            %>
                                <%= displayText %>
                        <% } else { %>
                                <span style="color: #6c757d;">근무 정보가 없습니다.</span>
                        <% } %>
                </div>
            </div>
        </div>
                    </div>
                    
            <!-- 인원 현황 -->
            <div class="form-section">
                <div class="section-header">□ 인원 현황(명)</div>
                <div class="section-content">
                    <table style="width: 100%; border-collapse: collapse; border: 1px solid #ddd; font-size: 14px;">
                        <thead>
                            <tr style="background-color: #f8f9fa;">
                                <th style="border: 1px solid #ddd; padding: 3.92px; text-align: center; width: 12%;">총원</th>
                                <th style="border: 1px solid #ddd; padding: 3.92px; text-align: center; width: 10%;">사고</th>
                                <th style="border: 1px solid #ddd; padding: 3.92px; text-align: center; width: 58%;">사고내용</th>
                                <th style="border: 1px solid #ddd; padding: 3.92px; text-align: center; width: 20%;">현재원</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="border: 1px solid #ddd; padding: 3.92px; text-align: center;">
                                    <%= workOrder.personnelStatus ? workOrder.personnelStatus.totalPersonnel : '' %>
                                </td>
                                <td style="border: 1px solid #ddd; padding: 3.92px; text-align: center;">
                                    <%= workOrder.personnelStatus ? workOrder.personnelStatus.absentPersonnel : '0' %>
                                </td>
                                <td style="border: none; padding: 3.92px; text-align: center; font-size: 12px;">
                                    <% if (workOrder.personnelStatus && workOrder.personnelStatus.absentDetails && workOrder.personnelStatus.absentDetails.length > 0) { %>
                                        <% 
                                        // 사고내용을 원하는 순서로 정렬하고 같은 종류 통합
                                        const absentDetails = workOrder.personnelStatus.absentDetails;
                                        
                                        // 정렬 순서 정의
                                        const sortOrder = ['연차1', '연차2', '기타', '정직', '병가', '산재', '휴직', '경조', '결근', '근무지원조'];
                                        
                                        // 같은 종류별로 그룹화
                                        const groupedDetails = {};
                                        absentDetails.forEach(item => {
                                            if (!groupedDetails[item.type]) {
                                                groupedDetails[item.type] = [];
                                            }
                                            groupedDetails[item.type].push(item.employeeName);
                                        });
                                        
                                        // 정렬된 순서대로 통합된 결과 생성
                                        const sortedDetails = [];
                                        sortOrder.forEach(type => {
                                            if (groupedDetails[type]) {
                                                sortedDetails.push({
                                                    type: type,
                                                    names: groupedDetails[type].join(',')
                                                });
                                            }
                                        });
                                        
                                        // 순서에 없는 타입들 추가
                                        Object.keys(groupedDetails).forEach(type => {
                                            if (!sortOrder.includes(type)) {
                                                sortedDetails.push({
                                                    type: type,
                                                    names: groupedDetails[type].join(',')
                                                });
                                            }
                                        });
                                        %>
                                        <!-- 모든 데이터를 이등분하여 표시 -->
                                        <div style="display: flex; gap: 20px; margin-bottom: 4px;">
                                            <div style="flex: 1; text-align: left;">
                                                <% for (let i = 0; i < Math.ceil(sortedDetails.length / 2); i++) { %>
                                                    <div style="margin-bottom: 4px;">
                                                        <%= sortedDetails[i].type %>: <%= sortedDetails[i].names %>
                                                    </div>
                                                <% } %>
                                            </div>
                                            <div style="flex: 1; text-align: left;">
                                                <% for (let i = Math.ceil(sortedDetails.length / 2); i < sortedDetails.length; i++) { %>
                                                    <div style="margin-bottom: 4px;">
                                                        <%= sortedDetails[i].type %>: <%= sortedDetails[i].names %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <span style="color: #6c757d;">사고내용이 없습니다.</span>
                                    <% } %>
                                </td>
                                <td style="border: 1px solid #ddd; padding: 3.92px; text-align: center;">
                                    <%= workOrder.personnelStatus ? workOrder.personnelStatus.currentPersonnel : '' %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                        </div>
