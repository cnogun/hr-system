<!--
  파일명: noticeManage.ejs
  목적: 시스템 알림 관리 페이지 (관리자용)
  기능:
  - 시스템 알림 목록 표시
  - 시스템 알림 수정/삭제
  - 시스템 알림 작성 버튼
  - 관리자 권한 검증
  - 반응형 테이블 디자인
-->
<%- include('header') %>
<div class="container py-5">
  <div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
             <h2 class="fw-bold mb-0">시스템 알림 관리</h2>
       <a href="/notice/new" class="btn btn-primary">시스템 알림 작성</a>
    </div>
  </div>
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>제목</th>
              <th>작성자</th>
              <th>작성일</th>
              <th>관리</th>
            </tr>
          </thead>
          <tbody>
            <% notices.forEach(function(notice) { %>
              <tr>
                <td><%= notice.title %></td>
                <td><%= notice.author?.username || notice.author?.email || '-' %></td>
                <td><%= notice.createdAt.toISOString().slice(0,10) %></td>
                <td>
                  <a href="/notice/<%= notice._id %>/edit" class="btn btn-sm btn-outline-primary">수정</a>
                  <form action="/notice/<%= notice._id %>/delete" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-outline-danger ms-1" onclick="return confirm('정말 삭제하시겠습니까?')">삭제</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include('footer') %> 